{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.gpt5video.local/character_profile.schema.json",
  "title": "CharacterProfile",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "reference_images": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "format": "uri" }
    },
    "style_constraints": { "type": "array", "items": { "type": "string" } },
    "mask_rules": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["reference_images", "style_constraints", "mask_rules"]
}

